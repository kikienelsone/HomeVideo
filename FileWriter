import java.io.FileWriter;
import java.io.IOException;

public class File {
    public static void main(String[] args) {
        try {
            FileWriter writer = new FileWriter("C:\\java\\new.txt",false);
            String text = "yj";
            writer.write(text);
            writer.append("\n");
            writer.flush();
        }catch (IOException e) {
            e.printStackTrace();
        }

    }
}
