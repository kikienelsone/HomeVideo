package lesson15;

import java.util.Scanner;

public class StringUtilsImpl implements StringUtils {

    @Override
    public double div(String number1, String number2) throws NullPointerException, NumberFormatException, ArithmeticException {
        if (" ".equals(number1) && " ".equals(number2)) {
            throw new NumberFormatException("no time for String))");
        }
        double doubleNumber1 = Double.parseDouble(number1);
        double doubleNumber2 = Double.parseDouble(number2);

        double result = doubleNumber1 / doubleNumber2;

        if (number1 == null || number2 == null) {
            throw new NullPointerException("and where is number?))");
        }
        if (doubleNumber1 == 0 || doubleNumber2 == 0) {
            throw new ArithmeticException("cannot be divided by zero:((");
        }


        return result;
    }


    @Override
    public int[] findWord(String text, String word) throws NullPointerException {
        text = "какой угодно текст";
        String[] partsOfText = text.split(" ");
        for (int i = 0; i < text.length(); i++) {
            int[] findWord = {};
        }

        return new int[0];
    }

    @Override
    public double[] findNumbers(String text) throws CustomException {
        return new double[0];
    }

}
